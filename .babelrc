{
  "env": {
    "development": {
      "presets": ["next/babel"],
      "plugins": [
        [
          "styled-components",
          {
            "ssr": true,
            "displayName": true,
            "preprocess": false
          }
        ]
      ]
    },
    "production": {
      "presets": ["next/babel"],
      "plugins": [
        [
          "styled-components",
          {
            "ssr": true,
            "displayName": true,
            "preprocess": false
          }
        ],
        [
          "module-resolver",
          {
            "extensions": [".ts"],
            "root": ["."],
            "alias": {
              "@styles": "./styles/index"
            }
          }
        ]
      ],
      "comments": false,
      "ignore": ["**/*.test.ts", "**/*.test.tsx"]
    },
    "test": {
      "presets": ["@babel/preset-env", "@babel/react"]
    }
  }
}
